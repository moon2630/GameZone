<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fruit_game_bg3"
    tools:context=".fruit_slicer">

    <!-- Game Area -->
    <RelativeLayout
        android:id="@+id/gameArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fruit_game_bg1">

        <!-- HUD Overlay -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#40000000"
            android:padding="15dp">

            <!-- Pause Button -->
            <TextView
                android:id="@+id/btnPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background_green"
                android:clickable="true"
                android:layout_marginTop="38dp"
                android:drawableStart="@drawable/vector_pause"
                android:drawableTint="@color/white"
                android:focusable="true"
                android:fontFamily="@font/caudex"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:textColor="#FFFFFF" />

            <!-- Score Text -->
            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/dm_serif_display"
                android:text="Score: 0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:padding="2dp"
                android:textSize="26sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowRadius="3"
                android:shadowDx="2"
                android:shadowDy="2" />

            <!-- Lives Text -->
            <TextView
                android:id="@+id/livesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/mate_sc"
                android:text="â¤ï¸â¤ï¸â¤ï¸"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textSize="19sp"
                android:shadowColor="#000000"
                android:shadowRadius="2" />

            <!-- High Score Text -->
            <TextView
                android:id="@+id/highScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/livesText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mate_sc"
                android:gravity="center"
                android:text="High: 0"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowRadius="2" />

            <!-- Combo Text -->
            <TextView
                android:id="@+id/comboText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scoreText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/caudex"
                android:text="COMBO x0"
                android:textColor="#00BCD4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:visibility="visible" />

        </RelativeLayout>

        <!-- Game Over Menu -->
        <androidx.cardview.widget.CardView
            android:id="@+id/gameOverLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="24dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:text="GAME OVER"
                    android:textColor="#E91E63"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <!-- Final Score -->
                <TextView
                    android:id="@+id/finalScoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="Score: 0"
                    android:textColor="#160808"
                    android:textSize="28sp" />

                <!-- High Score -->
                <TextView
                    android:id="@+id/finalHighScoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="High Score: 0"
                    android:fontFamily="@font/caudex"
                    android:textColor="#F1A02A"
                    android:textSize="23sp" />

                <!-- Restart Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRestart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_action_green"
                    android:fontFamily="@font/artifika"
                    android:padding="12dp"
                    android:text="PLAY AGAIN"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- Menu Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button_action"
                    android:fontFamily="@font/artifika"
                    android:padding="12dp"
                    android:text="MAIN MENU"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Start Menu -->
        <androidx.cardview.widget.CardView
            android:id="@+id/startMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="24dp"
            android:visibility="visible"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_game_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:text="Fruit Slicer"
                    android:textColor="#FF5722"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <!-- Start Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="28dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button_action"
                    android:backgroundTint="#10D717"

                    android:fontFamily="@font/artifika"
                    android:padding="12dp"
                    android:text="START SLICING"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- Difficulty Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="28dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_action"
                    android:backgroundTint="#FF9800"
                    android:fontFamily="@font/artifika"
                    android:padding="12dp"
                    android:text="DIFFICULTY: NORMAL"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- Fruit Select Button (for show) -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFruitSelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="28dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_action"
                    android:backgroundTint="#9C27B0"
                    android:fontFamily="@font/artifika"
                    android:padding="12dp"
                    android:text="ðŸŽ FRUITS VARIED ðŸŒ"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- Instructions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:text="HOW TO PLAY"
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:text="â€¢ SLICE fruits by swiping\nâ€¢ ðŸ§¨ BOMBS end your combo\nâ€¢ â¤ï¸ 3 lives total\nâ€¢ â­ SPECIAL fruits give bonus\nâ€¢ COMBO multiplier increases score"
                    android:textColor="#424242"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>