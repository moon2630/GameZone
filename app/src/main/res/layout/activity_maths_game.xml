<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maths_bg"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:orientation="vertical">





        <TextView
            android:id="@+id/score_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/mate_sc"
            android:shadowColor="#11D9C7"
            android:shadowDx="3"
            android:shadowDy="4"
            android:shadowRadius="5"
            android:text="Score : 0"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/High_score_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:fontFamily="@font/mate_sc"
            android:shadowColor="#11D9C7"
            android:shadowDx="3"
            android:shadowDy="4"
            android:shadowRadius="5"
            android:text="High score : 0"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/vector_bord1">


            <TextView
                android:id="@+id/Timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/vector_time_"
                android:drawablePadding="5dp"
                android:layout_marginTop="10dp"
                android:drawableTint="#0C2DE6"
                android:fontFamily="@font/caudex"
                android:text="2:00"
                android:textColor="#0C2DE6"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/question_number"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="70dp"
                android:drawablePadding="15dp"
                android:fontFamily="@font/caudex"
                android:shadowColor="#889A99"
                android:shadowDx="2"
                android:shadowDy="4"
                android:shadowRadius="5"
                android:text="Question : 1"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/maths_question_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="15dp"
                android:fontFamily="@font/caudex"
                android:shadowColor="#889A99"
                android:shadowDx="2"
                android:shadowDy="4"
                android:shadowRadius="5"
                android:text="5+5"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <EditText
            android:id="@+id/maths_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background"
            android:cursorVisible="true"
            android:focusable="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/caudex"
            android:hint=""
            android:inputType="number"
            android:padding="15dp"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/accent"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="24sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leave_game_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background_hard"
            android:fontFamily="@font/caudex"
            android:text="LEAVE"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/restart_game_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background_restart"
            android:fontFamily="@font/caudex"
            android:text="RESTART"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>