<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/neon_gradient_bg"
    android:orientation="vertical"
    tools:context=".tic_tac_home">

    <!-- Background with gradient -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section with Neon Glow -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_serif_display"
                    android:letterSpacing="0.2"
                    android:shadowColor="#00FFFF"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="20"
                    android:text="TIC TAC"
                    android:textAllCaps="true"
                    android:textColor="#00FFFF"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:fontFamily="@font/dm_serif_display"
                    android:letterSpacing="0.2"
                    android:shadowColor="#FF00FF"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="20"
                    android:text="TOE"
                    android:textAllCaps="true"
                    android:textColor="#FF00FF"
                    android:textSize="48sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">


                <!-- Player 1 Input with Neon Effect -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/neon_input_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/change_player1_symbol"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/tc_heart_red" />

                    <EditText
                        android:id="@+id/playerOne"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/caudex"
                        android:hint="Player 1"
                        android:letterSpacing="0.05"
                        android:maxLines="1"
                        android:paddingStart="13dp"
                        android:textColor="#00FFFF"
                        android:textColorHint="#97FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Player 2 Input with Neon Effect -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/neon_input_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/change_player2_symbol"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/tc_heart_blue" />


                    <EditText
                        android:id="@+id/playerTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/caudex"
                        android:hint="Player 2"
                        android:letterSpacing="0.05"
                        android:maxLines="1"
                        android:paddingStart="13dp"
                        android:textColor="#FF00FF"
                        android:textColorHint="#97FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Start Game Button with Neon Glow -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/startGameButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/neon_button_bg"
                    android:elevation="15dp"
                    android:fontFamily="@font/caudex"
                    android:letterSpacing="0.1"
                    android:padding="14dp"
                    android:stateListAnimator="@null"
                    android:text="START GAME"
                    android:textColor="#FFFFFF"
                    android:textSize="19sp"
                    android:textStyle="bold" />


                <!-- Divider with Neon Glow -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:text="OR"
                    android:textColor="#FFFF00"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Play with Computer Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/computerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/neon_button_purple"
                    android:elevation="10dp"
                    android:fontFamily="@font/caudex"
                    android:letterSpacing="0.1"
                    android:padding="17dp"
                    android:stateListAnimator="@null"
                    android:text="PLAY VS COMPUTER"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <!-- Start Game Button with Neon Glow -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/change_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="60dp"
                    android:background="@drawable/neon_button_pink"
                    android:elevation="15dp"
                    android:fontFamily="@font/caudex"
                    android:letterSpacing="0.1"
                    android:padding="15dp"
                    android:stateListAnimator="@null"
                    android:text="change symbol"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Footer Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="bottom|center"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caudex"
                    android:letterSpacing="0.2"
                    android:shadowColor="#00FF00"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:text="⚡ MODERN GAMING EXPERIENCE ⚡"
                    android:textColor="#00FF00"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>