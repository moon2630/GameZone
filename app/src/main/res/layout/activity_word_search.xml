<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/word_bg1"
    tools:context=".word_search">

    <!-- Difficulty Selection -->
    <androidx.cardview.widget.CardView
        android:id="@+id/difficultyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:visibility="visible"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tv_game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caudex"
                android:gravity="center"
                android:text="WordPuzzle"
                android:textColor="#0458DB"
                android:textSize="26sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/caudex"
                android:text="Select Difficulty"
                android:textColor="#6A6868"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Easy Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEasy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_background_restart"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:text="Easy"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Medium Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_background_medium"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:text="Medium"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Hard Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_background_hard"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:text="Hard"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/caudex"
                android:gravity="center"
                android:text="HOW TO PLAY"
                android:textColor="#424242"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/caudex"
                android:gravity="center"
                android:text="â€¢ Find hidden words in the grid\nâ€¢ Swipe across letters to select\nâ€¢ Words can be horizontal, vertical or diagonal\nâ€¢ Found words will be highlighted\nâ€¢ Complete before time runs out!"
                android:textColor="#424242"
                android:textSize="16sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Game Screen -->
    <RelativeLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/word_bg1"
        android:visibility="gone">

        <!-- Game Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#90252525"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/vector_time_"
                android:drawablePadding="5dp"
                android:drawableTint="#F80808"
                android:fontFamily="@font/caudex"
                android:gravity="center_vertical"
                android:text="05:00"
                android:textColor="#F14812"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/caudex"
                android:gravity="center"
                android:text="Found: 0/6"
                android:textColor="#34D23A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDifficulty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/caudex"
                android:gravity="right"
                android:text="Easy"
                android:textColor="#1DA5E2"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Word Grid Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/wordsLayout"
            android:layout_below="@id/tvTimer"
            android:layout_marginTop="90dp"
            android:padding="15dp"
            tools:ignore="NotSibling">

            <com.example.gamezone.WordSearchView
                android:id="@+id/wordSearchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <View
                android:id="@+id/selectionLine"
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:background="#FFD700"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/wordsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/caudex"
                android:padding="2dp"
                android:shadowColor="#24302F"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="WORDS TO FIND"
                android:textColor="#FABC03"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/wordsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical" />


        </LinearLayout>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/gameOverLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:visibility="gone"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caudex"
                android:gravity="center"
                android:text="ðŸŽ‰ PUZZLE SOLVED! ðŸŽ‰"
                android:textColor="#0458DB"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvGameResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/caudex"
                android:text="score"
                android:textColor="#4CAF50"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvTimeTaken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/caudex"
                android:text="Time: 02:45"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvWordsFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/caudex"
                android:text="Words: 6/6"
                android:textColor="#F69403"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlayAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_action_selected"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:text="play again"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Easy Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNewPuzzle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_action_selected_green"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:text="New puzzle"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Medium Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMainMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="2dp"
                android:background="@drawable/button_action"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:text="Menu"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!-- Hint Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHint"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="18dp"
        android:background="@drawable/input_background_green"
        android:text="ðŸ’¡"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="gone" />

</RelativeLayout>