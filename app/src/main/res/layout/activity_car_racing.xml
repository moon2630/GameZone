<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".car_racing">

    <!-- Game Area -->
    <RelativeLayout
        android:id="@+id/gameArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vector_road2">

        <!-- Score Overlay -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#40000000"
            android:padding="15dp">


            <TextView
                android:id="@+id/btnPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_action_blue"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/vector_pause"
                android:drawableTint="@color/white"
                android:focusable="true"
                android:fontFamily="@font/caudex"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:textColor="#FFFFFF" />


            <TextView
                android:id="@+id/levelText"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@id/btnPause"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/mate_sc"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:text="Level: 1"
                android:textColor="#00FF00"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/dm_serif_display"
                android:text="Score: 0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/livesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/mate_sc"
                android:text="❤️❤️❤️"
                android:layout_marginTop="20dp"

                android:textAlignment="center"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/highScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/livesText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mate_sc"
                android:gravity="center"
                android:text="High: 0"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <!-- Player Car (FIXED at bottom) -->
        <ImageView
            android:id="@+id/playerCar"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/vector_car_red" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#20000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:id="@+id/btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_action"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/caudex"
                android:paddingHorizontal="30dp"
                android:paddingVertical="18dp"
                android:text="◀"
                android:gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_action"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/caudex"
                android:paddingHorizontal="30dp"
                android:paddingVertical="18dp"
                android:text="▶"
                android:layout_marginStart="80dp"
                android:gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />



        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/gameOverLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="24dp"
            android:visibility="gone"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:drawableStart="@drawable/vector_car30"
                    android:drawableEnd="@drawable/vector_car30"
                    android:text="  CRASH !  "
                    android:textColor="#E91E63"
                    android:textSize="26sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/finalScoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="Score: 0"
                    android:textColor="#160808"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/finalHighScoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="High Score: 0"
                    android:fontFamily="@font/dm_serif_display"
                    android:textColor="#F1A02A"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRestart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_action_selected"
                    android:fontFamily="@font/artifika"
                    android:padding="12dp"
                    android:text="PLAY AGAIN"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_action_selected_green"
                    android:fontFamily="@font/artifika"
                    android:padding="12dp"
                    android:layout_marginBottom="15dp"
                    android:text="MAIN MENU"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />




            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Start Menu -->
        <androidx.cardview.widget.CardView
            android:id="@+id/startMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="24dp"
            android:visibility="visible"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_game_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:text="SpeedRacer"
                    android:textColor="#0458DB"
                    android:textSize="26sp"
                    android:textStyle="bold" />


                <!-- Easy Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background_restart"
                    android:fontFamily="@font/artifika"
                    android:padding="12dp"
                    android:text="Start race"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <!-- Medium Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_background_hint"
                    android:fontFamily="@font/artifika"
                    android:padding="12dp"
                    android:text="Difficulty : Easy"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <!-- Hard Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCarSelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_background_exit"
                    android:fontFamily="@font/artifika"
                    android:padding="12dp"
                    android:text="Car : Red"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:text="HOW TO PLAY"
                    android:textColor="#424242"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:text="• Use LEFT/RIGHT buttons to move\n• Avoid incoming cars\n• Survive as long as possible\n• 3 lives total"
                    android:textColor="#424242"
                    android:textSize="16sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>