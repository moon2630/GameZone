<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="24dp"
app:cardBackgroundColor="@color/white"
    android:visibility="visible"
    app:cardCornerRadius="6dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caudex"
            android:gravity="center"
            android:text="MathMaster"
            android:textColor="#0458DB"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/caudex"
            android:gravity="center"
            android:text="Choose Your Difficulty Level"
            android:textColor="#424242"
            android:textSize="16sp" />

        <!-- Easy Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/easy_level_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background_easy"
            android:fontFamily="@font/artifika"
            android:padding="12dp"
            android:text="Easy"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Medium Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/medium_level_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_background_medium"
            android:fontFamily="@font/artifika"
            android:padding="12dp"
            android:text="Medium"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Hard Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hard_level_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_background_hard"
            android:fontFamily="@font/artifika"
            android:padding="12dp"
            android:text="Hard"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />




    </LinearLayout>

</androidx.cardview.widget.CardView>
