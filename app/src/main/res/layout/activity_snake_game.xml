<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snake_grass3"
    tools:context=".snake_game">

    <!-- Score Display -->
    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Score: 0"
        android:shadowColor="#14A019"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:fontFamily="@font/mate_sc"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvScore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="High Score: 0"
        android:textStyle="bold"
        android:shadowColor="#14A019"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:fontFamily="@font/mate_sc"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHighScore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:shadowColor="#FFEB3B"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:textStyle="bold"
        android:fontFamily="@font/mate_sc"
        android:text="Length: 5 | Speed: 1"
        android:textColor="#F1F2F8"
        android:textSize="18sp" />

    <!-- Game View -->
    <com.example.gamezone.SnakeGameView
        android:layout_marginTop="16dp"
        android:id="@+id/snakeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_above="@+id/btnStart"
        android:background="@color/black"
        android:layout_below="@id/tvStats" />


    <!-- Swipe Control Area (Only visible when tilt is ON) -->
    <RelativeLayout
        android:id="@+id/swipeControlArea"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_alignParentBottom="true"
        android:background="#77266526"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/mate_sc"
            android:text="SWIPE HERE TO MOVE"
            android:textColor="#80FFFFFF"
            android:textSize="16sp" />

    </RelativeLayout>





    <!-- Game Status Message -->
    <TextView
        android:id="@+id/tvGameStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Press START to Play!"
        android:fontFamily="@font/mate_sc"
        android:textColor="#F1950E"
        android:textSize="28sp"
        android:textStyle="bold"
        android:visibility="visible" />








    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/artifika"
        android:padding="12dp"
        android:background="@drawable/button_background_medium"
        android:text="Start Game"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/snakeView"
        android:background="@drawable/button_background_hard"
        android:fontFamily="@font/artifika"
        android:padding="12dp"
        android:text="Theme"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnControlToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/snakeView"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_background_exit"
        android:fontFamily="@font/artifika"
        android:padding="12dp"
        android:text="Tilt: OFF"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />





    <TextView
        android:id="@+id/btnUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_restart"
        android:layout_above="@id/btnDown"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/caudex"
        android:paddingHorizontal="18dp"
        android:paddingVertical="13dp"
        android:text="▲"
        android:textColor="@color/black"
        android:textSize="22sp" />



    <TextView
        android:id="@+id/btnDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_restart"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/caudex"
        android:paddingHorizontal="18dp"
        android:paddingVertical="13dp"
        android:text="▼"
        android:textColor="@color/black"
        android:textSize="22sp" />



    <TextView
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_restart"
        android:layout_alignTop="@id/btnUp"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/btnUp"
        android:fontFamily="@font/caudex"
        android:paddingHorizontal="18dp"
        android:paddingVertical="13dp"
        android:text="◀"
        android:textColor="@color/black"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/btnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_restart"
        android:layout_alignTop="@id/btnUp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btnUp"
        android:fontFamily="@font/caudex"
        android:paddingHorizontal="18dp"
        android:paddingVertical="13dp"
        android:text="▶"
        android:textColor="@color/black"
        android:textSize="22sp" />







</RelativeLayout>