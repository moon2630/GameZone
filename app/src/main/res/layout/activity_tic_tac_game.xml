<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/neon_gradient_bg"
    tools:context=".tic_tac_game">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_serif_display"
                android:letterSpacing="0.2"
                android:shadowColor="#00FFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20"
                android:text="TIC TAC"
                android:textAllCaps="true"
                android:textColor="#00FFFF"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:fontFamily="@font/dm_serif_display"
                android:letterSpacing="0.2"
                android:shadowColor="#FF00FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20"
                android:text="TOE"
                android:textAllCaps="true"
                android:textColor="#FF00FF"
                android:textSize="48sp"
                android:textStyle="bold" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/container"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/playerOneLayout"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/neon_button_bg"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">


                    <ImageView
                        android:id="@+id/change_player1Game_symbol"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/tc_heart_red" />


                    <TextView
                        android:id="@+id/playerOneName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:ellipsize="end"
                        android:letterSpacing="0.1"

                        android:paddingEnd="2dp"
                        android:fontFamily="@font/caudex"
                        android:maxLines="1"
                        android:shadowColor="#E6DFE6"
                        android:shadowDx="2"
                        android:textAllCaps="true"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:text="Player One"
                        android:textColor="#00BCD4"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:id="@+id/playerOnePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:maxLines="1"
                    android:shadowColor="#00BCD4"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:shadowRadius="20"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/playerTwoLayout"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/neon_button_purple"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">


                    <ImageView
                        android:id="@+id/change_player2Game_symbol"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/tc_heart_blue" />


                    <TextView
                        android:id="@+id/playerTwoName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:ellipsize="end"
                        android:textAllCaps="true"
                        android:paddingEnd="2dp"
android:letterSpacing="0.1"
                        android:fontFamily="@font/caudex"
                        android:maxLines="1"
                        android:shadowColor="#E6DFE6"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:text="Player Two"
                        android:textColor="#D52EF1"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:id="@+id/playerTwoPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/caudex"
                    android:gravity="center"
                    android:maxLines="1"
                    android:shadowColor="#FF00FF"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:shadowRadius="20"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caudex"
                android:gravity="center"
                android:shadowColor="#0BDFFA"
                android:shadowDx="2"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:drawablePadding="5dp"
                android:drawableTint="@color/white"
                android:drawableStart="@drawable/vector_time_"
                android:text="Time : "
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />


            <Chronometer
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/caudex"
                android:shadowColor="#0BDFFA"
                android:shadowDx="2"
                android:shadowDy="5"
android:gravity="center_vertical"
                android:shadowRadius="20"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="5dp">


                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/input_background" />


                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/input_background" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/input_background" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="5dp">


                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/input_background" />


                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/input_background" />

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/input_background" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="5dp">


                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/input_background" />


                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/input_background" />

                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/input_background" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

