<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guess_number_bg1"
    tools:context=".guess_the_number">



    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#4BFFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/caudex"
            android:gravity="center"
            android:shadowColor="#092629"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:padding="2dp"
            android:text="Score: 0"
            android:textColor="#0FE218"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:shadowColor="#092629"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:padding="2dp"
            android:fontFamily="@font/caudex"
            android:gravity="center"
            android:text="Time: 00"

            android:textColor="#FFD700"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/streakTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/caudex"
            android:gravity="center"
            android:text="Streak: 0"
            android:shadowColor="#092629"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:padding="2dp"
            android:layout_marginTop="30dp"
            android:textColor="#0CD9C6"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/difficultyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:visibility="visible"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">


            <!-- Title -->
            <TextView
                android:id="@+id/tv_game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caudex"
                android:text="NumberFlash"
                android:textColor="#FF9800"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/caudex"
                android:text="SELECT DIFFICULTY"
                android:textColor="#424242"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_game_title" />

            <!-- Easy Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/easyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/button_background_easy"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:text="EASY (3 Numbers)"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Medium Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mediumButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/button_background_medium"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:text="MEDIUM (4 Numbers)"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


            <!-- Hard Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/hardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_background_hard"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:text="HARD (5 Numbers)"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="70dp"
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statsContainer"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Numbers Display Area -->
        <RelativeLayout
            android:id="@+id/numbersContainer"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <!-- Answer Numbers -->
            <LinearLayout
                android:id="@+id/answerContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Numbers will be added programmatically -->

            </LinearLayout>

            <!-- Left Cover -->
            <View
                android:id="@+id/leftContainer"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#F6E329" />

            <!-- Right Cover -->
            <View
                android:id="@+id/rightContainer"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#FFC107" />

        </RelativeLayout>

        <!-- Memory Hint -->
        <TextView
            android:id="@+id/hintTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/caudex"
            android:text="Memorize the numbers in 2 seconds!"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Input Fields Container -->
        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Input fields will be added programmatically -->

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:orientation="horizontal">





            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:layout_marginStart="55dp"
                android:layout_marginEnd="55dp"
                android:background="@drawable/button_action"
                android:text="Start Game"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </LinearLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/restartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/artifika"
            android:padding="12dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="55dp"
            android:background="@drawable/button_background_easy"
            android:text="NEW GAME"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/gameOverLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:visibility="gone"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/gameOverText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caudex"
                android:gravity="center"
                android:text="GAME OVER"
                android:textColor="#0D8AED"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/resultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/caudex"
                android:text="Score: 0"
                android:textColor="#160808"
                android:textSize="22sp" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/playAgainButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_background_medium"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:text="PLAY AGAIN"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tryAgainButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_background_hard"
                android:fontFamily="@font/artifika"
                android:padding="12dp"
                android:text="TRY AGAIN"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>