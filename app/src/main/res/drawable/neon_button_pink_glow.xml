<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Outer glow layer -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#00FFFFFF" />
                    <stroke
                        android:width="6dp"
                        android:color="#FF00FF" />
                    <padding
                        android:bottom="3dp"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="3dp" />
                </shape>
            </item>

            <!-- Inner glow layer -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <solid android:color="#1AFF00FF" />
                    <stroke
                        android:width="3dp"
                        android:color="#80FF00FF" />
                </shape>
            </item>

            <!-- Main background -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="15dp" />
                    <solid android:color="#FFD90AFB" />
                    <stroke
                        android:width="2dp"
                        android:color="#FF00FF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>