<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#8B008B"
                android:endColor="#660066"
                android:angle="270"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#FF00FF"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#660066"
                android:endColor="#330033"
                android:angle="270"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#FF00FF"/>
        </shape>
    </item>
</selector>